{
  "name": "nest-typescript-starter",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": "12.*.*",
    "npm": ">6.13.0"
  },
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "postinstall": "npm run build",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"{src,test}/**/*.{js,jsx,ts,tsx,md,html,css,yaml,yml,json}\"",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:local": "nest start",
    "document": "compodoc -p tsconfig.json -s",
    "start:prod": "rimraf dist && nest build && node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.{ts, tsx}\" --fix --max-warnings 0",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cucumber-js -p default -f json:acceptance-test-result.json --format-options '{\"colorsEnabled\": true}'"
  },
  "dependencies": {
    "-": "0.0.1",
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.1.1",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.1.1",
    "@nestjs/jwt": "^7.1.0",
    "@nestjs/microservices": "^7.4.4",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.1.1",
    "@nestjs/swagger": "^4.6.0",
    "@nestjs/typeorm": "^7.1.4",
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "amqp-connection-manager": "^3.2.0",
    "amqplib": "^0.6.0",
    "automapper-ts": "^1.9.0",
    "bcrypt": "^5.0.0",
    "chai": "^4.2.0",
    "class-transformer": "^0.3.1",
    "class-validator": "latest",
    "cookie-parser": "^1.4.5",
    "csv": "^5.3.2",
    "cucumber": "^6.0.5",
    "cucumber-pretty": "^6.0.0",
    "cucumber-tsflow": "^3.4.1",
    "format": "^0.2.2",
    "jest-cli": "^26.6.1",
    "jest-ts-auto-mock": "^1.0.11",
    "jwt-claims": "^1.0.1",
    "moment": "^2.29.0",
    "mssql": "^6.2.1",
    "node-yaml-config": "0.0.6",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.3.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.5",
    "save": "^2.4.0",
    "swagger-ui-express": "^4.1.4",
    "ts-auto-mock": "^2.3.4",
    "ts-jest": "^26.1.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "ts-sinon": "^1.2.0",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.11",
    "typeorm": "^0.2.25",
    "typescript": "^3.9.3",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.2.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.1.1",
    "@types/express": "^4.17.8",
    "@types/hapi__joi": "^17.1.4",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.6",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.13",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "main.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "compiler": "ttypescript"
      }
    }
  }
}
